<header class="restaurant-headers detail-dashboard">

</header>


<main class="center-div mb100 mt30">
<h3>Welcome to {{restaurant.name}}</h3>

<form class="white-back-form" action="/client/order-summary/{{restaurant._id}}" method="POST">


    <div>
        <label for="table"> Introduce you table number </label>
        <input type="number" name="table" id="table-input" />
    </div>
    
<h3 class="ta mt30">{{restMenu.name}}</h3>

    <h6 class="mt20 ta">To start with</h6>
    {{#each restMenu.dishes}}
    {{#ifCond this.category '==' "starters"}}
    <div class="element user-element">
        <div style="display: flex;">
        <div class="element-row user-element" style="justify-content: flex-start;">
            <input class="input" type="checkbox" name={{this._id}} value="true">
            <label for="selectedDish">{{this.name}}</label>
        </div>
        <div>
            <h4>{{this.price}}<span>€</span></h4>
        </div>
        </div>
        <hr>
           <div class="element-row">
                <h6>{{this.description}}</h6>
           </div>
                <span style="font-size: 7px; margin-top:3px; text-transform: uppercase">This dish can contain: {{this.allergies}}</span>
    </div>
    {{/ifCond}}
    {{/each}}

    <h6 class="mt20 ta">Main dishes</h6>
    {{#each restMenu.dishes}}
    {{#ifCond this.category '==' "main"}}
     <div class="element user-element">
        <div style="display: flex;">
        <div class="element-row user-element" style="justify-content: flex-start;">
            <input class="input" type="checkbox" name={{this._id}} value="true">
            <label for="selectedDish">{{this.name}}</label>
        </div>
        <div>
            <h4>{{this.price}}<span>€</span></h4>
        </div>
        </div>
        <hr>
           <div class="element-row">
                <h6>{{this.description}}</h6>
           </div>
                <span style="font-size: 7px; margin-top:3px; text-transform: uppercase">This dish can contain: {{this.allergies}}</span>
    </div>
    {{/ifCond}}
    {{/each}}

    <h6 class="mt20 ta">Desserts</h6>
    {{#each restMenu.dishes}}
    {{#ifCond this.category '==' "desserts"}}
    <div class="element user-element">
        <div style="display: flex;">
        <div class="element-row user-element" style="justify-content: flex-start;">
            <input class="input" type="checkbox" name={{this._id}} value="true">
            <label for="selectedDish">{{this.name}}</label>
        </div>
        <div>
            <h4>{{this.price}}<span>€</span></h4>
        </div>
        </div>
        <hr>
           <div class="element-row">
                <h6>{{this.description}}</h6>
           </div>
                <span style="font-size: 7px; margin-top:3px; text-transform: uppercase">This dish can contain: {{this.allergies}}</span>
    </div>
    {{/ifCond}}
    {{/each}}
<div class="center-div mt30">
    <button class="black-btn" type="submit">Order</button>
    </div>
</form>


<a href="/client/restaurant-profile"><h6>You can visit the restaurant profile anytime</h6></a>
</main>