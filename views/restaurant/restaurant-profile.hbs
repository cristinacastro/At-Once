<main class="center-div">
<div class="perfil-main">
{{#if restaurant}}
<div id="updateProfile" class="center-div mt30 pr50 pl50 ta">
    <h2 class="pl50 pr50 ta">{{restaurant.name}}</h2>
    <img src="{{restaurant.imgPath}}" alt="">

    <h4>{{restaurant.description}}</h4>

    <h6 class="mt30">You can find us here:</h6>
    <h5>{{restaurant.contactInfo.address}}
    <h5>{{restaurant.contactInfo.phone}}</h5>
    <h5>{{restaurant.contactInfo.email}}</h5>
    <h5>{{restaurant.contactInfo.website}}</h5>

    <form action="/restaurant/restaurant-profile/edit" enctype="multipart/form-data" method="post">
    <div class="center-div mt30">
    <button class="black-btn"><a href="/restaurant/restaurant-profile-edit/{{restaurant._id}}">Update profile</a></button></div>
    </form>

{{else}}
</div>
<div id="createProfile" class="center-div">
    <h2>Crear perfil</h2>
    <form class="white-back-form" action="/restaurant/restaurant-profile" method="post" enctype="multipart/form-data">
        <div>
            <label for="name"> Restaurant name </label>
            <input type="text" name="name" id="rname" placeholder="Restaurant name">
        </div>       
         <div>
            <label for="description"> Description </label>
            <input type="textarea" name="description" id="rdescription" placeholder="Describe your restaurant">
        </div>        
        <div>
            <label for="address"> Adress: </label>
            <input type="text" name="address" id="radress" placeholder="Introduce your adress">
            <label for="phone"> Phone number: </label>
            <input type="number" name="phone" id="rphone" placeholder="Introduce your phone">
            <label for="email"> Email: </label>
            <input type="email" name="email" id="remail" placeholder="Introduce your website">
            <label for="website"> Website: </label>
            <input type="text" name="website" id="rwebsite" placeholder="Introduce your website">
        </div>       
         <div>
            <label for="imgPath"> Image: </label>
            <input style="height: 40px; border: none" type="file" name="imgPath">
           
        </div>  
        <div class="center-div mt30">  
        <button class="black-btn"> Create your profile </button>
        </div>    
    </form>
</div>


{{/if}}

</main>